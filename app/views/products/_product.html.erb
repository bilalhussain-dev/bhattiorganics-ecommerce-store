<div class="container my-5">
  <div id="<%= dom_id product %>">

    <!-- Product Details Section -->
    <div class="product-container p-4 mb-5">
      <div class="row">
        <!-- Product Images -->
        <div class="col-lg-6 mb-4 mb-lg-0">
          <div class="row">
            <div class="col-12 mb-3">
              <img src="https://images.pexels.com/photos/933648/pexels-photo-933648.jpeg?auto=compress&cs=tinysrgb&w=600" alt="Premium Pet Food" class="img-fluid product-image-main w-100">
            </div>
            <div class="col-12">
              <div class="d-flex gap-2">
                <img src="https://images.pexels.com/photos/16565742/pexels-photo-16565742/free-photo-of-group-of-goats-enjoying-the-sun-on-a-pasture.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Product Thumbnail 1" class="thumbnail active">
                <img src="https://images.pexels.com/photos/30606128/pexels-photo-30606128/free-photo-of-close-up-portrait-of-a-goat-in-natural-habitat.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load" alt="Product Thumbnail 2" class="thumbnail">
                <img src="https://images.pexels.com/photos/16592580/pexels-photo-16592580/free-photo-of-close-up-of-a-saanen-goat.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load" alt="Product Thumbnail 3" class="thumbnail">
              </div>
            </div>
          </div>
        </div>

        <!-- Product Info -->
        <div class="col-lg-6">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <span class="category-badge">
              <%= product.category.name %>
            </span>
            <div>
              <div class="d-flex gap-3 mb-4">
                <% if user_signed_in? %>
                  <% if current_user.wished_products.include?(@product) %>
                    <%= button_to product_wishlist_path(@product), method: :delete, class: "btn-favorite" do %>
                      <i class="fa fa-gratipay" aria-hidden="true"></i>
                    <% end %>
                  <% else %>
                    <%= button_to product_wishlist_path(@product), method: :post, class: "btn-favorite" do %>
                      <i class="fa fa-gratipay filled-heart" aria-hidden="true"></i>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
          <h1 class="product-title-show mb-2"><%= product.title %></h1>
          <p class="price mb-4">$<%= product.price %></p>
          <p class="mb-4"><%= product.additional_info %></p>
        </div>
      </div>
    </div>

    <!-- Product Specifications -->
    <div class="product-container p-4 mb-5">
      <ul class="nav nav-tabs border-0 specifications-tab mb-4" id="productTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab">Description</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab">Reviews</button>
        </li>
      </ul>

      <div class="tab-content" id="productTabContent">
        <div class="tab-pane fade show active" id="description" role="tabpanel">
          <div class="row">
            <div class="col-lg-8">
              <h4 class="mb-3">Product Description</h4>
              <%= product.details %>
            </div>
          </div>
        </div>


        <div class="tab-pane fade" id="reviews" role="tabpanel">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">Customer Reviews</h4>
            <button class="btn btn-outline-primary">Write a Review</button>
          </div>

          <!-- Sample Review -->
          <div class="border-bottom pb-4 mb-4">
            <div class="d-flex justify-content-between mb-2">
              <div>
                <h5 class="mb-0">Amazing product!</h5>
                <div>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                </div>
              </div>
              <span class="text-muted">2 weeks ago</span>
            </div>
            <p class="mb-2">My Golden Retriever absolutely loves this food! I've noticed a significant improvement in his coat and energy levels since switching to this brand.</p>
            <div class="d-flex align-items-center">
              <span class="fw-bold me-2">Sarah M.</span>
              <span class="badge bg-success">Verified Purchase</span>
            </div>
          </div>

          <!-- Sample Review -->
          <div class="border-bottom pb-4 mb-4">
            <div class="d-flex justify-content-between mb-2">
              <div>
                <h5 class="mb-0">Great quality food</h5>
                <div>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="far fa-star text-warning"></i>
                </div>
              </div>
              <span class="text-muted">1 month ago</span>
            </div>
            <p class="mb-2">My picky eater finally found something she enjoys! The kibble size is perfect for my small dog and she seems to digest it very well. Taking off one star because it's a bit pricey.</p>
            <div class="d-flex align-items-center">
              <span class="fw-bold me-2">Michael T.</span>
              <span class="badge bg-success">Verified Purchase</span>
            </div>
          </div>

          <div class="text-center mt-4">
            <button class="btn btn-outline-primary">Load More Reviews</button>
          </div>
        </div>
      </div>
    </div>

    <!-- You May Also Like Section -->
    <div class="mb-4">
      <h2 class="related-title mb-2">You may also like</h2>
      <p class="related-subtitle mb-4">Check out these other popular products for your pet</p>

      <div class="row g-4">
        <!-- Item 1 -->
        <% @related_products.each do |product| %>
          <div class="col-lg-6">
            <div class="card related-card border-0 h-100">
              <div class="row g-0">
                <div class="col-md-5">
                  <img src="https://images.pexels.com/photos/25549225/pexels-photo-25549225/free-photo-of-goat-on-a-farm.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load" alt="Dog toy" class="img-fluid h-100 w-100" style="object-fit: cover;">
                </div>
                <div class="col-md-7">
                  <div class="card-body d-flex flex-column h-100">
                    <h4 class="card-title mb-2"><%= product.title %></h4>
                    <p class="card-text mb-4"><%= truncate(product.details, length: 100) %></p>
                    <div class="mt-auto">
                      <%= link_to "Read more", product_path(product), class: 'read-more-btn w-100 text-decoration-none text-center' %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>


      </div>
    </div>
  </div>
</div>